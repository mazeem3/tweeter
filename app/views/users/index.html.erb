<div class="container">

<div class="page-header">
  <h1>All Users</h1>
</div>

<div class="col-sm-3">
  <% @users.each do |user| %>
    <div class="well">

      <%= user.username %> 
        <% if @current_user.following?(user) %>
          <%= link_to "Unfollow", unfollow_path(user_id: user.id), method: :post %>
        <% else %>
          <%= link_to "Follow", follow_path(user_id: user.id), method: :post%>
        <% end %>


    </div>
  <% end %>

</div>
</div>
