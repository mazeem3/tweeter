<div class="container">
  <div class="page-header">
    <h1>Welcome, <%= @current_user.username %> </h1>
  </div>

    <div class="col-sm-7">
        <div class="well">
            <div class="page-header">
                <h4>
                    My Tweets
                    <span class="badge"><%= @current_user.tweets.count %></span>
                </h4>

            </div>
            <div class="list-group">
                <% @tweets.each do |tweet| %>
                <div class="list-group-item">
                    <small class="muted">
                        <em>
                            <%= time_ago_in_words tweet.created_at %>
                            ago
                            <%= tweet.user.username %>
                            Tweeted:
                            <br>
                        </em>
                    </small>
                    <%= tweet.body %>
                    <%= link_to tweet_path(id: tweet.id), method: 'delete' do %>
                    <span class="glyphicon glyphicon-trash"></span>
                    <% end %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
    <div class="col-sm-5">
      <div class="well">
                Followers <span class="badge"><%= @current_user.followings.count %></span>
        </div>
        <div class="well">
                  Following<span class="badge"><%= @current_user.all_following.count %></span>
          </div>
          <%= link_to 'Create new tweet', new_tweet_path,class:'btn btn-primary btn-lg' %>
      </div>

    </div>
</div>
