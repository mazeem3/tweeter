<div class="container">
  <% if @tweet.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <% @tweet.errors.full_messages.each do |msg| %>
        <%= msg %><br>
        <% end %>
    </div>
  <% end %>

  <div class="well">
    <%= form_for @tweet, url:create_tweet_path do |f| %>
    <div class="form-group">
      <%= f.label "Message:" %>
      <%= f.text_area :body, class:"form-control", rows:"5"%>
    </div>
    <div class="form-group">
      <%= f.submit "Tweet it!", class:'btn-lg btn-danger btn-block' %>
    </div>
  </div>
  <% end %>
</div>
